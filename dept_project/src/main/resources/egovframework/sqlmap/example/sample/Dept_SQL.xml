<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Dept">

	<typeAlias  alias="egovMap" type="egovframework.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias  alias="deptVO" type="egovframework.example.sample.service.DeptVO"/>

	<insert id="deptDAO.insertDept">
		<![CDATA[
			INSERT INTO DEPT 
				( deptno
				  , dname
				  , loc )
			VALUES ( #deptno#
				  , #dname#
				  , #loc# )
		]]>
	</insert>

	<!-- 부서 목록을 조회한다.  -->
	<select id="deptDAO.selectDeptList" parameterClass="deptVO" resultClass="egovMap">
			SELECT deptno
				  , dname
				  , loc
			  FROM DEPT
			 ORDER BY deptno
	</select>

	<!-- 부서 상세 내역을 조회한다. -->
	<select id="deptDAO.selectDeptDetail" resultClass="deptVO">
		<![CDATA[
			SELECT deptno
				  , dname
				  , loc
			  FROM DEPT
			 WHERE deptno = #deptno#
			 ORDER BY deptno
		]]>
	</select>
	
	<!-- 부서를 삭제한다. -->
	<delete id="deptDAO.deleteDept">
		<![CDATA[
			DELETE FROM DEPT
			 WHERE deptno = #deptno# 
		]]>
	</delete>
	
</sqlMap>
